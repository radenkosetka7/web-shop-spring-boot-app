{
  "rules": [

    {
      "methods": ["POST"],
      "pattern": "/messages",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["GET", "PUT"],
      "pattern": "/users/*",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["PUT"],
      "pattern": "/users/*/changePassword",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/products/*",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["DELETE","PUT"],
      "pattern": "/products/*",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["POST"],
      "pattern": "/products",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["POST"],
      "pattern": "/products/*/comments",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["PUT"],
      "pattern": "/products/*/comment/answer",
      "roles": [
        "CUSTOM_USER"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/categories/*",
      "roles": [
        "CUSTOM_USER"
      ]
    }
  ]
}